{
  "name": "pomo-chan",
  "productName": "pomo-chan",
  "version": "1.0.0",
  "description": "Pomodoro timer with Live2D companion",
  "main": "dist-electron/main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "electron .",
    "start:fresh": "FRESH_START=1 electron .",
    "package": "npm run build && electron-builder --dir",
    "make": "npm run build && electron-builder",
    "lint": "eslint .",
    "format": "prettier --write --ignore-unknown .",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install"
  },
  "keywords": [],
  "author": {
    "name": "acomarcho",
    "email": "marchotridyo@heynovo.ai"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.1.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.3.0",
    "lefthook": "^2.0.16",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "get-windows": "^9.2.3",
    "lucide-react": "^0.563.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "overrides": {
    "esbuild": "0.25.0",
    "gh-pages": "6.3.0",
    "tar": "7.5.7",
    "tmp": "0.2.5"
  },
  "build": {
    "appId": "com.pomo-chan.app",
    "productName": "pomo-chan",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/live2d",
        "to": "live2d"
      }
    ],
    "asarUnpack": [
      "node_modules/get-windows/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
